
  <%#= raw title_page %>
  <%= render :partial => "admin/shared/flash_messages", :locals => {:flash => flash} %>
  <%= raw render(:partial => "/admin/shared/index_table", 
                 :locals => {:title => "Option types",
                              :new_object_url => new_admin_option_type_url,
                              :headers => [OptionType.human_attribute_name(:name), OptionType.human_attribute_name(:presentation)],
                              :content => @option_types.map{|option_type|
                                  OpenStruct.new(:content_methods => [option_type.name, option_type.presentation],
                                                 :actions => [link_to(t('admin.edit'), edit_admin_option_type_url(option_type), :class => "edit"),
                                                              link_to(t('admin.delete'), admin_option_type_url(option_type), :class => "delete", :method => :destroy, :confirm => t('admin.are_you_sure')) ])
                              }}) %>

<%= paginate @option_types %>